# See: https://editorconfig.org for info and editor plugins
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 88

[*.go]
indent_style = tab

[*.md]
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2
